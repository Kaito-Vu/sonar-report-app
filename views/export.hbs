<body>
<div class="container">
  <h1>Báo cáo: {{report.filename}}</h1>

  <div style="display:flex; gap:20px; margin-bottom:20px;">
    <div style="flex:1">
      <h3>Thống kê Loại</h3>
      <table>{{#each stats.byType}}<tr><td style="color:{{this.color}}">{{this.label}}</td><td>{{this.count}}</td></tr>{{/each}}</table>
    </div>
    <div style="flex:1">
      <h3>Thống kê Mức độ</h3>
      <table>{{#each stats.bySeverity}}<tr><td style="color:{{this.color}}">{{this.label}}</td><td>{{this.count}}</td></tr>{{/each}}</table>
    </div>
  </div>

  <h3>Chi tiết lỗi</h3>
  <table>
    <thead><tr><th>Type</th><th>Severity</th><th>Rule</th><th>File</th><th>Line</th><th>Message</th></tr></thead>
    <tbody>
    {{#each issues}}
      <tr>
        <td>{{this.type}}</td>
        <td>{{this.severity}}</td>
        <td>{{this.ruleKey}}</td>
        <td>{{this.fileName}}</td>
        <td>{{this.fileLine}}</td>
        <td>{{this.message}}</td>
      </tr>
    {{/each}}
    </tbody>
  </table>
</div>
</body>