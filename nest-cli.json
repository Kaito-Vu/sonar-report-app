{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../views/**/*",
        "outDir": "dist/views",
        "watchAssets": true
      },
      {
        "include": "../fonts/**/*",
        "outDir": "dist/fonts",
        "watchAssets": true
      },
      {
        "include": "../public/**/*",
        "outDir": "dist/public",
        "watchAssets": true
      }
    ]
  }
}