generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        Int      @id @default(autoincrement())
  name      String
  key       String   @unique
  createdAt DateTime @default(now())
  reports   Report[]
}

model Report {
  id           String   @id @default(uuid())
  filename     String
  status       String   @default("PENDING")
  createdAt    DateTime @default(now())     // Ngày giờ import vào hệ thống

  // Thông tin từ SonarQube
  analysisKey  String?  @unique             // ID duy nhất của lần scan trên Sonar
  analysisDate DateTime?                    // Ngày giờ scan trên Sonar
  projectVersion String?                    // Version của build (nếu có)

  projectId    Int?
  project      Project? @relation(fields: [projectId], references: [id])
  issues       Issue[]
}

model Issue {
  id                    Int     @id @default(autoincrement())
  reportId              String
  report                Report  @relation(fields: [reportId], references: [id])
  message               String?
  type                  String?
  severity              String?
  ruleKey               String?
  ruleName              String?
  fileName              String?
  fileLine              Int?
  typeIdx               Int     @default(99)
  severityIdx           Int     @default(99)
  impactMaintainability String?
  impactReliability     String?
  impactSecurity        String?
  @@index([reportId])
  @@index([reportId, typeIdx, severityIdx])
}

model SonarConfig {
  id    Int    @id @default(autoincrement())
  url   String
  token String
}

model SonarRule {
  key        String   @id
  name       String
  htmlDesc   String?
  mdDesc     String?
  isExternal Boolean  @default(false)
  updatedAt  DateTime @updatedAt
}