generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        Int      @id @default(autoincrement())
  name      String
  key       String   @unique
  createdAt DateTime @default(now())
  reports   Report[]
}

model Report {
  id             String    @id @default(uuid())
  filename       String
  status         String    @default("PENDING") // QUEUED, PROCESSING, COMPLETED, FAILED
  createdAt      DateTime  @default(now())

  // KHÓA LIÊN KẾT VỚI SONARQUBE
  analysisKey    String?   // Đây là Key duy nhất của lần Scan (VD: AY_x1z...)
  analysisDate   DateTime? // Ngày quét
  projectVersion String?

  projectId      Int?
  project        Project?  @relation(fields: [projectId], references: [id])
  issues         Issue[]

  // RÀNG BUỘC: Một dự án không thể có 2 báo cáo trùng analysisKey
  @@unique([projectId, analysisKey])
}

model Issue {
  id          Int     @id @default(autoincrement())
  reportId    String
  report      Report  @relation(fields: [reportId], references: [id])

  message     String?
  type        String?
  severity    String?
  ruleKey     String?
  ruleName    String?
  fileName    String?
  fileLine    Int?

  typeIdx     Int     @default(99)
  severityIdx Int     @default(99)

  @@index([reportId])
  @@index([reportId, typeIdx, severityIdx])
}

model SonarConfig {
  id    Int    @id @default(autoincrement())
  url   String
  token String
}

model SonarRule {
  key        String   @id
  name       String
  htmlDesc   String?
  mdDesc     String?
  isExternal Boolean  @default(false)
  updatedAt  DateTime @updatedAt
}